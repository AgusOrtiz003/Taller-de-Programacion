programa p5p3
procesos
  proceso juntarFlores(ES cant:numero)
  variables
    avI,caI:numero
  comenzar
    avI:=PosAv
    caI:=PosCa
    BloquearEsquina(10,10)
    Pos(10,10)
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cant:=cant+1
    Pos(avI,caI)
    LiberarEsquina(10,10)
  fin
  proceso avanzar(ES f:numero;ES esquinas:numero)
  comenzar
    si(HayFlorEnLaEsquina)
      tomarFlor
      f:=f+1
    mover
    esquinas:=esquinas+1
  fin
  proceso vaciarBolsa
  variables
    avI,caI:numero
  comenzar
    avI:=PosAv
    caI:=PosCa
    BloquearEsquina(10,10)
    Pos(10,10)
    mientras(HayFlorEnLaBolsa)
      depositarFlor
    Pos(avI,caI)
    LiberarEsquina(10,10)
  fin
areas
  areaR1:AreaP(1,3,100,3)
  areaR2:AreaP(1,4,100,4)
  pozo:AreaC(10,10,10,10)
  areaC:AreaP(1,5,1,5)  
robots
  robot Recolector
  variables
    esquinas,f:numero
  comenzar
    derecha
    esquinas:=0
    f:=0
    mientras(PosAv<100)
      f:=0
      mientras((f<10)&(esquinas<15)&(PosAv<100))
        avanzar(f,esquinas)
      si(esquinas=15)
        esquinas:=0
      si(f>0)
        vaciarBolsa {Â¿tienen que hacerlo cuando terminan?}
      EnviarMensaje(V,rC)
    EnviarMensaje(F,rC)
  fin
  robot Cosechador
  variables
    cant:numero
    sigo:boolean
  comenzar
    repetir 2
      RecibirMensaje(sigo,*)
      mientras(sigo)
        juntarFlores(cant)
        RecibirMensaje(sigo,*)
    Informar('La cantidad recolectada es de ',cant)        
  fin
variables
  r1,r2:Recolector
  rC:Cosechador
comenzar
  AsignarArea(r1,areaR1)
  AsignarArea(r2,areaR2)
  AsignarArea(rC,areaC)
  AsignarArea(r1,pozo)
  AsignarArea(r2,pozo)
  AsignarArea(rC,pozo)
  Iniciar(r1,1,3)
  Iniciar(r2,1,4)
  Iniciar(rC,1,5)
fin
